{
	"apache": {
		"default_site_enabled": true,
		"docroot_dir": "/srv/site/public",
		"default_modules": ["proxy", "proxy_http"],
		"listen_ports" : [80, 8000]
	},
	"postgresql": {
		"config": {
			"listen_addresses": "localhost"
		},
		"password": {
			"postgres": "postgres"
		},
		"version": "9.1"
	},
	"run_list": [
		"recipe[apt]",
		"recipe[build-essential]",
		"recipe[apache2]",
		"recipe[database]",
		"recipe[postgresql::server]",
		"recipe[nodejs]"
	]
}
